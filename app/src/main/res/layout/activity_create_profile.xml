<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProfileActivity">

    <TextView
        android:id="@+id/textViewCreateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Create Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="Gender"
        app:layout_constraintStart_toStartOf="@+id/textViewBirthday"
        tools:layout_editor_absoluteY="157dp" />

    <EditText
        android:id="@+id/editTextGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextBirthdate"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/textViewEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        app:layout_constraintStart_toStartOf="@+id/textViewGender"
        tools:layout_editor_absoluteY="217dp" />

    <EditText
        android:id="@+id/editTextEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextGender"
        tools:layout_editor_absoluteY="198dp" />

    <TextView
        android:id="@+id/textViewHometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hometown"
        app:layout_constraintStart_toStartOf="@+id/textViewEducation"
        tools:layout_editor_absoluteY="286dp" />

    <EditText
        android:id="@+id/editTextHometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextEducation"
        tools:layout_editor_absoluteY="268dp" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use current location"
        app:layout_constraintStart_toStartOf="@+id/textViewHometown"
        tools:layout_editor_absoluteY="356dp" />

    <Switch
        android:id="@+id/switchLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allow"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="352dp" />

    <TextView
        android:id="@+id/textViewOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Occupation"
        app:layout_constraintStart_toStartOf="@+id/textViewLocation"
        tools:layout_editor_absoluteY="416dp" />

    <EditText
        android:id="@+id/editTextOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextInterests1"
        tools:layout_editor_absoluteY="403dp" />

    <EditText
        android:id="@+id/editTextInterests1"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextInterests2"
        tools:layout_editor_absoluteY="487dp" />

    <EditText
        android:id="@+id/editTextInterests2"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextInterests3"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/buttonCreateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="645dp" />

    <TextView
        android:id="@+id/textViewInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interests"
        app:layout_constraintStart_toStartOf="@+id/textViewOccupation"
        tools:layout_editor_absoluteY="489dp" />

    <EditText
        android:id="@+id/editTextBirthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="72dp" />

    <EditText
        android:id="@+id/editTextInterests3"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="571dp" />

</androidx.constraintlayout.widget.ConstraintLayout>