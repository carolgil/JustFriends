<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/parent_layout" android:padding='30dp'>

    <TextView
        android:id="@+id/textViewPEeventName"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:outlineProvider="bounds"
        android:singleLine="false"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewPEeventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:outlineProvider="bounds"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewPEtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="70dp"
        android:outlineProvider="bounds"
        android:text="Time"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewPElocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:outlineProvider="bounds"
        android:text="Location"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewPEInterestTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="120dp"
        android:text="Interest"
        android:textSize="18sp" />

    <View
        android:id="@+id/feedSeparator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


</RelativeLayout>