<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/parent_layout" android:padding='30dp'>

    <TextView
        android:id="@+id/textViewPEeventName"
        android:layout_width="200dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/textViewPEeventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textViewPEeventName"
        android:layout_margin="30dp" />

    <TextView
        android:id="@+id/textViewPEtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textViewPEeventDate" />

</RelativeLayout>